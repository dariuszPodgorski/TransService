@model TransServiceWebApp.ViewModel.ShowDetailsProfileClientViewModel
@{
    ViewBag.Title = "ShowProfile";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<head>
    <link href="~/Content/Style/ClientStyle.css" rel="stylesheet" />
</head>

<div class="container infoClient">

    <h2> Zobacz swoje dane</h2>
    <p> Poniżej znajdują się wszystkie dane przedsiębiorstwa</p>
    <div class="row">
        <div class="col-md-6">
            <h5>Dane podstawowe</h5>
            <hr width="300" />
            <div class="row">
                <div class="col-md-6 standarDane">
                    @Html.DisplayNameFor(model => model.CompanyName)
                    <br />
                    @Html.DisplayNameFor(model => model.Country)
                    <br />
                    @Html.DisplayNameFor(model => model.PostCode)
                    <br />
                    @Html.DisplayNameFor(model => model.City)
                    <br />
                    @Html.DisplayNameFor(model => model.Adres)
                    <br />
                    @Html.DisplayNameFor(model => model.NumberApartment)
                    <br />
                    @Html.DisplayNameFor(model => model.NIP)
                    <br />
                    @Html.DisplayNameFor(model => model.Phone)
                    <br />
                    @Html.DisplayNameFor(model => model.Fax)
                </div>

                <div class="col-md-6 dbDane">
                    @Html.DisplayFor(model => model.CompanyName)
                    <br />
                    @Html.DisplayFor(model => model.Country)
                    <br />
                    @Html.DisplayFor(model => model.PostCode)
                    <br />
                    @Html.DisplayFor(model => model.City)
                    <br />
                    @Html.DisplayFor(model => model.Adres)
                    <br />
                    @Html.DisplayFor(model => model.NumberApartment)
                    <br />
                    @Html.DisplayFor(model => model.NIP)
                    <br />
                    @Html.DisplayFor(model => model.Phone)
                    <br />
                    @Html.DisplayFor(model => model.Fax)
                    <br />

                </div>
            </div>

        </div>
        <div class="col-md-6">
            <h5>Osoba kontaktowa</h5>
            <hr width="300" />
            <div class="row">
                <div class="col-md-6 standarDane">
                    @Html.DisplayNameFor(model => model.FirstNameContact)
                    <br />
                    @Html.DisplayNameFor(model => model.LastNameContact)
                    <br />
                    @Html.DisplayNameFor(model => model.PhoneContact)
                    <br />
                    @Html.DisplayNameFor(model => model.EmailContact)
                </div>
                <div class="col-md-6 dbDane">
                    @Html.DisplayFor(model => model.FirstNameContact)
                    <br />
                    @Html.DisplayFor(model => model.LastNameContact)
                    <br />
                    @Html.DisplayFor(model => model.PhoneContact)
                    <br />
                    @Html.DisplayFor(model => model.EmailContact)
                </div>
                <div class="buttonsShowProfile">
                    <a href='@Url.Action("Index", "Client")'>
                        <input type="submit" value="Powrót" class="btn btn-ShowProfileButton" />
                    </a>
                    <a href='@Url.Action("EditProfile", "Client")'>
                        <input type="submit" value="Edytuj dane" class="btn btn-ShowProfileButton" />
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
</div>

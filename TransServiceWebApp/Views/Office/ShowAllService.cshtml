@model IEnumerable<TransServiceWebApp.ViewModel.ShowAllServiceViewModel>

@{
    ViewBag.Title = "ShowAllService";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<head>
    <link href="~/Content/Style/Forvarder.css" rel="stylesheet" />
</head>
<div class="container listOrders">
    <div class="col-md-12">
        <h2>Lista wszystkich serwisów</h2>
        <p>Ostatnia aktualizacja: @DateTime.Now.ToString("dd/MM/yyy")</p>
        <div class="buttons">
            <a href='@Url.Action("AddNewService", "Office")'>
                <input type="submit" value="Dodaj nowy" class="btn btn-NewOrderButton" />
            </a>

        </div>
        <table class="table tableList">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marke)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CarModel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeService)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateService)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marke)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeService)
                    </td>
                    <td>
                        <a href='@Url.Action("ShowDetailsService", "Office", new { serviceId = item.ServiceId }, null)'>
                            <i class="fa fa-align-justify fa-lg"></i><span class="arrow"></span>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

                            @Html.EditorFor(model => model.RepeatPassword, new { htmlAttributes = new { placeholder = "Powtórz hasło", @class = "form-control place_vehicle" } })
                            @Html.ValidationMessageFor(model => model.RepeatPassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 text-center">
                                <input type="submit" value="Dodaj klienta" class="btn btn-save-registration" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}






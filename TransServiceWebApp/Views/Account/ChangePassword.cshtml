@model TransServiceWebApp.ViewModel.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<head>

    <link href="~/Content/Style/AccountLayoutStyle.css" rel="stylesheet" />
</head>
<div class="container changePassword ">
    <h2>Zmiana hasła do profilu</h2>
    <p>Wypełnij poniższy formularz aby zmienić dane logowania</p>
    <div class="row newData">
        <div class="col-md-6 data">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { placeholder = "Login do systemu", @class = "form-control input_text" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = "Stare hasło", @class = "form-control input_text" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { placeholder = "Nowe hasło", @class = "form-control input_text" } })
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ReplayNewPassword, new { htmlAttributes = new { placeholder = "Powtórz hasło", @class = "form-control input_text" } })
                        @Html.ValidationMessageFor(model => model.ReplayNewPassword, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 text-center">
                        <input type="submit" value="Zapisz zmiany" class="btn btn-savechange" />
                    </div>
                </div>

            }
        </div>
        <div class="col-md-6">
            <img src="~/Content/Images/Account/Login/change_password.png" alt="change_password" class="imgChange" />
        </div>
    </div>
</div>

